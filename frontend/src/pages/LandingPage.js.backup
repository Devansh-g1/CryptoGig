              const Icon = feature.icon;
              return (
                <div key={idx} className="glass-effect p-8 rounded-3xl card-hover feature-card border border-slate-700/50 hover:border-blue-500/30 transition-all group">
                  <div className={'w-16 h-16 bg-' + feature.color + '-500/10 rounded-2xl flex items-center justify-center mb-5 border border-' + feature.color + '-500/20 group-hover:scale-110 transition-transform'}>
